{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "airbnb"
  ],
  "env": {
    "browser": true,
    "es6": true
  },
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    // в угоду prettier и личному стилю
    "react/jsx-filename-extension": "off",
    "implicit-arrow-linebreak": "off",
    "max-len": "off",
    "function-paren-newline": "off",
    "react/jsx-indent": "off",
    "indent": "off",
    "no-confusing-arrow": "off",
    "object-curly-newline": "off",
    "comma-dangle": "off",
    "import/prefer-default-export": "off",
    "camelcase": "off",
    "import/no-unresolved": "off",
    "no-use-before-define": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ],
        "moduleDirectory": [
          "node_modules",
          "src/"
        ]
      }
    }
  }
}
